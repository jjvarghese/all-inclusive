<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:All_Inclusive.views"
             x:DataType="views:FormField"
             x:Class="All_Inclusive.views.FormField">
    <VerticalStackLayout>
        <Label Text="{Binding Title}" Margin="0,0,0,4" />
        <Border 
            Stroke="Black"
            StrokeThickness="1"
            BackgroundColor="White" 
            Padding="0">
            <Entry x:Name="FormEntry" 
                   Placeholder="{Binding Placeholder}"
                   PlaceholderColor="#6B6B6B"
                   Keyboard="{Binding Keyboard}"
                   SemanticProperties.Description="{Binding Description}" />
        </Border>
    </VerticalStackLayout>
    
</ContentView>