<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:All_Inclusive.views"
             x:Class="All_Inclusive.FormPage"
             xmlns:local="clr-namespace:All_Inclusive.screens.form"
             xmlns:vm="clr-namespace:All_Inclusive.ViewModels"
             x:DataType="vm:FormViewModel"
             Title="User Form">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            x:Name="FormContainer">
            <CollectionView ItemsSource="{Binding FieldLayout}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:FormMetadata">
                        <VerticalStackLayout Spacing="2">
                            <views:FormField
                                Title="{Binding Title}"
                                Placeholder="{Binding Placeholder}"
                                Description="{Binding Description}"
                                Text="{Binding Text}"
                                Keyboard="{Binding Keyboard}" />

                            <Label
                                x:DataType="local:FormMetadata"
                                Text="{Binding FullNameError}"
                                IsVisible="{Binding HasFullNameError}"
                                TextColor="#C00000"
                                FontAttributes="Italic" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Submit"
                    BackgroundColor="#005BBB"
                    Command="{Binding SubmitCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>