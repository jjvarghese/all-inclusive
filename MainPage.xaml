<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="All_Inclusive.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label Text="Full name" />
            <Entry Placeholder="Enter your full name"
                   x:Name="FullNameEntry"
                   SemanticProperties.Description="Full name" />

            <Label Text="Email address" />
            <Entry Placeholder="you@example.com"
                   x:Name="EmailEntry"
                   Keyboard="Email"
                   SemanticProperties.Description="Email address" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
